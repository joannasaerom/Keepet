<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.epicodus.pettracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WeightActivity" />
        <activity android:name=".MedicationActivity" />
        <activity android:name=".MedicationDetailActivity" />
        <activity android:name=".VetActivity" />
        <activity android:name=".NewMedicationActivity" />
        <activity android:name=".NewPetActivity" />
        <activity android:name=".PetListActivity"></activity>
    </application>

</manifest>