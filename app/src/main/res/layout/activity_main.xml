<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epicodus.pettracker.ui.MainActivity">


    <!--<android.support.v7.widget.Toolbar-->
        <!--android:id="@+id/my_toolbar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="?attr/actionBarSize"-->
        <!--android:background="?attr/colorPrimary"-->
        <!--android:elevation="4dp"-->
        <!--android:theme="@style/ThemeOverlay.AppCompat.ActionBar"-->
        <!--app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>-->

    <TextView
        android:text="Juniper | F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textColor="@color/colorText"
        android:id="@+id/petName"
        android:layout_below="@+id/circularImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />


    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="225dp"
        android:layout_height="225dp"
        android:src="@drawable/juniper"
        app:civ_border_color="@color/colorBackground900"
        app:civ_border_width="10dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10"
        android:id="@+id/circularImageView"
        app:civ_shadow_color="@color/colorText100"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:text="Birthdate: December 24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/petName"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorText"
        android:layout_centerHorizontal="true"
        android:textSize="23dp"
        android:id="@+id/birthDate" />

    <Button
        android:text="Weight Graph"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/birthDate"
        android:layout_centerHorizontal="true"
        android:background="@color/colorBackground"
        android:textColor="@color/colorText"
        android:id="@+id/weightButton" />

    <Button
        android:text="Medication"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/weightButton"
        android:background="@color/colorBackground"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/medicationButton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_add"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/addPet"
        android:layout_below="@+id/my_toolbar"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Find Vets in the Area"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/colorBackground"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:layout_below="@+id/medicationButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/vetButton" />

</RelativeLayout>
