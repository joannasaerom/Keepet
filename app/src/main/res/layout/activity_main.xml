<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epicodus.pettracker.MainActivity">

    <!--<android.support.v7.widget.Toolbar-->
        <!--android:id="@+id/my_toolbar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="?attr/actionBarSize"-->
        <!--android:background="?attr/colorPrimary"-->
        <!--android:elevation="4dp"-->
        <!--android:theme="@style/ThemeOverlay.AppCompat.ActionBar"-->
        <!--app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>-->

    <TextView
        android:text="Juniper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/petName"
        android:layout_below="@+id/circularImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:text="| F"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:layout_below="@+id/circularImageView"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/petName"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/gender" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/juniper"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10"
        android:id="@+id/circularImageView"
        app:civ_shadow_color="#8BC34A"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <TextView
        android:text="Birthdate: December 24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/petName"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:id="@+id/birthDate" />

    <Button
        android:text="Weight Graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/birthDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/weightButton" />

    <Button
        android:text="Medication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weightButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/medicationButton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_add"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/addPet"
        android:layout_below="@+id/my_toolbar"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
