<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_medication"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorBackground"
    tools:context="com.epicodus.pettracker.ui.NewMedicationActivity">

    <EditText
        android:hint="Reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorText"
        android:textSize="25dp"
        android:textColor="@color/colorText"
        android:layout_below="@id/medicationDetails"
        android:layout_centerHorizontal="true"
        android:id="@+id/reminder" />

    <EditText
        android:hint="Medication Name"
        android:textColorHint="@color/colorText"
        android:layout_width="wrap_content"
        android:textColor="@color/colorText"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:id="@+id/medicationName"
        android:layout_centerHorizontal="true" />

    <EditText
        android:hint="Medication Details"
        android:textColorHint="@color/colorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:layout_below="@id/medicationName"
        android:textColor="@color/colorText"
        android:textSize="25dp"
        android:id="@+id/medicationDetails"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="Add"
        android:layout_below="@id/reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:background="@color/colorBackground"
        android:textColor="@color/colorText"
        android:id="@+id/addMedicine"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
