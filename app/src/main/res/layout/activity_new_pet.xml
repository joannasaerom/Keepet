<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_new_pet"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:layout_height="match_parent"
    tools:context="com.epicodus.pettracker.ui.NewPetActivity">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="225dp"
        android:layout_height="225dp"
        android:src="@drawable/dogicon1"
        app:civ_border_color="@color/colorBackground900"
        app:civ_border_width="10dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10"
        android:layout_marginTop="20dp"
        android:id="@+id/circularImageView"
        app:civ_shadow_color="@color/colorText100"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cameraIcon"
        android:src="@drawable/ic_camera_alt_white_24dp"
        android:layout_below="@+id/circularImageView"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorText"
        android:hint="Name"
        android:ems="10"
        android:id="@+id/petName"
        android:layout_above="@+id/gender"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Male or Female"
        android:textColorHint="@color/colorText"
        android:ems="10"
        android:id="@+id/gender"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/birthDate" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:textColorHint="@color/colorText"
        android:hint="Birthdate"
        android:ems="10"
        android:id="@+id/birthDate"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/addPet"
        android:layout_alignStart="@+id/gender" />

    <Button
        android:text="Add Pet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:background="@color/colorBackground"
        android:id="@+id/addPet"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
